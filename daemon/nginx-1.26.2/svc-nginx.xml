<service>
  <id>svc-nginx</id>
  <name>ATM Stack Nginx (powered by WinSW)</name>
  <description>Nginx ATM Application Stack</description>  
  <!-- Path to the executable, which should be started -->
  <executable>%BASE%\nginx.exe</executable>
  <stopexecutable>C:\Windows\system32\taskkill.exe</stopexecutable>
  <stopargument>/f</stopargument>
  <stopargument>/IM</stopargument>
  <stopargument>nginx.exe</stopargument>
  <logpath>%BASE%\nginx-logs</logpath>
  <logmode>roll</logmode> 
</service>
